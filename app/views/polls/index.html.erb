<div class="container-fluid">
  <div class="row">
    <div class="col-5 offset-1">
      <p id="notice"><%= notice %></p>
      <h1>Polls</h1>
      <table id='poll-table' class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>Name</th>
            <th>Burnout</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= poll.burnout %></td>
              <td><%= link_to 'Delete', poll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-6">
      <%= pie_chart [["Yes", Poll.where(burnout: "yes").count], ["No", Poll.where(burnout: "no").count]], id:'polls', library: {pieSliceText: 'value'} %>
    </div>
  </div>

   <div class="row">
    <div class='col-11 offset-1 col-sm-4'>
      <h3>New Doctor Burnout Poll</h3>
      <%= render 'form', poll: @poll %>
    </div>
  </div>
</div>
